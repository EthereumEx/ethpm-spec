      "title": "Sources",
      "type": "array",
      "description": "TODO",
      "items": {
        "title": "Source Path",
        "type": "string",
        "description": "TODO",
        "pattern": "\\.\\/.*"
      },
      "default": []
    },
    "dependencies": {
      "title": "Dependencies",
      "description": "TODO",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][-a-zA-Z0-9_]*$": {
          "title": "Dependency",
          "type": "string",
          "description": "TODO"
        }
      },
      "default": {}
