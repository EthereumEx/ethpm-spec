    "keywords": {
      "title": "Keywords",
      "type": "array",
      "default": [],
      "description": "TODO",
      "items": {
        "title": "Keyword",
        "type": "string"
      }
    },
    "links": {
      "title": "Links",
      "description": "TODO",
      "type": "object",
      "blackbox": true
    },
